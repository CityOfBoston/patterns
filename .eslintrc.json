{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "import",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5"
    }]
  },
  "overrides": [
    {
      "files": [ "*.ts", "*.tsx" ],
      "parser": "typescript-eslint-parser",
      "rules": {
        "no-unused-vars": 0,
        "no-undef": 0
      }
    }
  ]
}
