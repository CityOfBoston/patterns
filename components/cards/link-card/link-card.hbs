{{#each cards as |card|}}
  <a href="{{ card.href }}" class="lcd m-t500 g--4 g--4--sl{{#../theme}} lcd--{{this}}{{/../theme}}">
    <div class="lcd-c">
      {{#if card.image}}
      <div class="lcd-im" style="background-image: url({{ card.image.url }})"></div>
      {{/if}}
      <div class="lcd-t">{{ card.title }}</div>
      {{#if card.subtitle}}
        <div class="lcd-st t--subinfo t--g300">{{ card.subtitle }}</div>
      {{/if}}
      {{#if card.content}}
        <div class="lcd-d" id="bottom"> {{ card.content }}</div>
      {{/if}}
    </div>
{{/each}}