<input id="tabMenuCTRL" type="checkbox" name="tab-menu-ctrl" class="tab-menu-ctrl" aria-hidden="true">

{{#each links}}
  <input id="tabCTRL{{@index}}" type="radio" name="tab-ctrl" class="tab-ctrl tab-ctrl-{{@index}}" data-hash="{{link}}" {{#if selected}}checked{{/if}} aria-hidden="true">
{{/each}}

<ul class="tab">
  {{#each links}}<li class="tab-li tab-li-{{@index}}">
    <label for="tabMenuCTRL" class="tab-li-m">{{text}}</label>
    <label for="tabCTRL{{@index}}" data-href="{{link}}" class="tab-li-a tab-li-a-{{@index}}">{{text}}</label>
  </li>{{/each}}
  <li class="tab-li tab-li-close">
    <label for="tabMenuCTRL" class="tab-li-a tab-li-a--c" aria-hidden="true">Close</label>
  </li>
</ul>

<div class="tab-pc">
  {{#each links}}
    <div class="tab-p tab-p-{{@index}}">This is the content for {{text}}</div>
  {{/each}}
</div>
