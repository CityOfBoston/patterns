{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "web-components",
    "web-components/types",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
