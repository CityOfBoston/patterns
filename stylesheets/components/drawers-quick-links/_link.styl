/*

   LINK WITH ARROW

   Base:
    dr-ql-lwa

   Modifier:
    w = white theme

 */

.dr-ql-lwa
  display: flex
  align-items: center
  /*background-image: url(../images/global/icons/chevron.svg)*/
  background-position: center right
  background-repeat: no-repeat
  background-size: 10px
  font-family: $sans
  font-size: responsive 12px 14px
  font-range: 480px 1440px
  line-height: $line-height-100
  padding: $sizing-400
  padding-left: 0
  text-transform: uppercase
  border-bottom: 1px dashed #355973
  position: relative

  &-ic
    height: 14px
    width: 20px
    position: absolute
    right: $sizing-000
    top: 50%
    margin-top: -8px

    svg
      max-height: 100%
      max-width: 100%
      transform: rotate(0deg)
      transition: transform 250ms

  &-i
    fill: $white

  &--w
    color: $white

    &:link
    &:visited
      color: $white

    &:hover, &:focus
      color: $optimistic-blue-dark

      .dr-ql-lwa-i
        fill: $optimistic-blue-light

// handle hover interference with focus
a.focus-active.dr-ql-lwa.dr-ql-lwa--w:hover 
  pointer-events: none
  color: $white

a.dr-ql-lwa.dr-ql-lwa--w.focus-active:focus 
  color: $optimistic-blue-light