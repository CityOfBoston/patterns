/*

   LINK CARD MINI

   Base:
    lcd-mini

   Elements:
    t = title
    im = image

 */

.lcd--mini
  display: block
  height: 100%
  background-color: $grey-000 
  text-decoration: none
  font-family: $serif

  &:hover, &:focus-within
    background-color: $optimistic-blue-dark

    .lcd--mini-t
      color: $white

  &-c
    position: relative
    padding: $sizing-600
    min-height: 50px
    height: 100px
    word-break: normal

    
  &-im
    position: absolute
    width: 10%
    right: 10%
    padding-bottom: 18px
    background-position: right
    background-size: contain
    background-repeat: no-repeat

  &-t
    color: $optimistic-blue-dark
    font-family: Montserrat,sans-serif;
    font-size: responsive 12px 15px
    font-range: 480px 1440px
    line-height: $line-height-200
    margin: 0
    text-transform: uppercase

// handle hover interference with focus
.lcd--mini.focus-active:hover
  pointer-events: none
  background-color: $white

  .lcd--mini-t
    color: $optimistic-blue-dark

  .lcd--mini-im
    background-color: $optimistic-blue-dark

.lcd--mini.focus-active:focus-within
  pointer-events: auto
  background-color: $optimistic-blue-dark

  .lcd--mini-t
    color: $white

  .lcd--mini-im
    background-color: $blended-optimistic-blue
    background-blend-mode: multiply
