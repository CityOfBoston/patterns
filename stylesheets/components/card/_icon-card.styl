/*
/*

   CARD

   Base:
    icd

   Elements:
    t = title
    b = body

   Modifier:
    None Yet

 */

.icd
  display: block
  background-color: $white
  text-decoration: none
  font-family: $serif
  min-height: 300px
  height: 450px

  &:hover, &:focus-within
    .icd-d
      color: $body-text

    .icd-ic
      background-color: $optimistic-blue-light

    .icd-c
      background-color: $grey-100

  &-ic
    height: 50%
    padding: $sizing-700 
    background-position: center
    background-size: 15rem
    background-repeat: no-repeat

  &-c
    height: 50%
    padding: $sizing-700
    background-color: $optimistic-blue-light

  &-t
    font-family: Montserrat,Arial,sans-serif
    font-weight: 700
    text-transform: uppercase
    color: #091f2f
    font-size: 1rem
    letter-spacing: 0

  &-d
    color: $white
    font-size: responsive 15px 18px
    font-range: 480px 1440px
    line-height: $line-height-300
    margin-top: $sizing-100
    margin-bottom: $sizing-500

    &--mt0
      margin-top: 0

    p
      margin: 0 0 1rem

      &:last-child
        margin: 0

  &--plain
    &:hover, &:focus-within
      background-color: $white
      .icd-t
        color: $charles-blue
      .icd-d
        color: $body-text

    .icd-t
      color: $charles-blue

  &--e[href*="//"]:not([href*="www.boston.gov"])
    position: relative

    &:after
      content: ''
      border-right: 20px solid $charles-blue;
      border-left: 20px solid $charles-blue;
      border-bottom: 10px solid transparent;
      height: 40px
      position: absolute
      top: 0
      right: 1rem
      z-index: 1

    &:before
      content: ''
      background-repeat: no-repeat
      background-image: url(../images/global/icons/external-link-white.svg)
      position: absolute
      top: 0
      right: 1rem
      transform: translate(-8px, 11px)
      z-index: 2
      height: 20px
      width: 20px

// handle hover interference with focus
.icd.focus-active:hover
  pointer-events: none
  background-color: $white

  .icd-t
    color: $optimistic-blue-dark

  .icd-d
    color: $body-text

  .icd-ic
    background-color: $optimistic-blue-light

.b--w
  .icd.focus-active

    &:hover
      border-color: #e0e0e0

      .icd-c
        border-color: #e0e0e0

.icd.focus-active:focus-within
  pointer-events: auto
  background-color: $optimistic-blue-light

  .icd-t, .icd-d
    color: $white

  .icd-ic
    background-color: $blended-optimistic-blue
    background-blend-mode: multiply
