/*

   CARD: PERSON

   Base:
    cd-p

   Elements:
    t = title
    b = body

   Modifier:
    None Yet

 */

.cdp
  display: flex
  flex-direction: column

  &-a
    line-height: $line-height-000
    width: 100%

  &-t
    line-height: $line-height-100

  &-l
    display: flex
    flex-grow: 1
    align-items: center
    background-color: $grey-000
    text-align: left
    width: 100%

    @media $media-large
      display: block
      text-align: center

    &:hover, &:focus
      background-color: $optimistic-blue-light
      color: $white

      .cdp-t
        color: $charles-blue

      .cdp-st
        color: $white

  &-i
    display: block
    width: 110px
    height: 110px
    object-fit: cover
    border-radius: 100%
    margin-right: $sizing-300

    @media $media-large
      width: 120px
      height: 120px
      margin: 0 auto $sizing-300

    @media $media-xlarge
      width: 148px
      height: 148px
      margin: 0 auto $sizing-500

    @media $media-xxlarge
      width: 173px
      height: 173px

    // Option for always centering, even on mobile breakpoints
    &--c
      margin: 0 auto;

/* Handle theme variations */
.b--g
  .cdp
    &-l
      background-color: $white

      &:hover, &:focus
        background-color: $optimistic-blue-light

.b--b
  .cdp
    &-a
      background-color: $optimistic-blue-dark
      border-top: $border-200 solid $charles-blue

      &:hover, &:focus
        color: $white
        background-color: $freedom-red-light

// handle hover interference with focus
.cdp.focus-active:hover
  pointer-events: none
  background-color: $white

.b--g .cdp-l.focus-active:hover, .b--b .cdp-l.focus-active:hover, .cdp-l.focus-active:hover
  pointer-events: none
  background-color: $white
  color: $optimistic-blue-dark

.b--g .cdp-a.focus-active:hover, .b--b .cdp-a.focus-active:hover, .cdp-a.focus-active:hover
  pointer-events: none
  color: $white
  background-color: $charles-blue

.b--g .cdp-l.focus-active:hover .cdp-st, .b--b .cdp-l.focus-active:hover .cdp-st, .cdp-l.focus-active:hover .cdp-st
  pointer-events: none
  color: $grey-300

.b--g .cdp-l.focus-active:focus, .b--b .cdp-l.focus-active:focus, .cdp-l.focus-active:focus
  background-color: $optimistic-blue-light
  color: $white

.cdp-l.focus-active:hover .cdp-st
  color: $white