/* 

    NEWS

    Base:
        n--a
    
    Modifier: 
        sm = small

*/ 

.n--a
    position: relative 
    background-color: $white
    text-decoration: none
    font-family: $serif 
    height: 450px

    @media $media-large
        display: block
        height: 190px
        
    &-news-item-wrapper
        padding: 0
        position: relative
        background-color: #fff
        height: 100%

        &:hover, &:focus
            background-color: $optimistic-blue-dark
            color: $white

            .n--a-department-title, .n--a-title
                color: $white
    
    &-thumb-wrapper
        margin-top: 0
        width: 100%
        height: 190px
    
    &-text-wrapper
        padding: 20px 10px 20px 0

    &-department-title
        text-transform: uppercase
        color: #58585b
        font-family: $sans
        font-size: .88889rem
        line-height: 1.08333rem
        margin: 20px 5px 40px

    &-title
        padding: 15px 5px 10px
        color: #1871bd
        font-weight: 400
        font-style: italic
        text-transform: none

    &-date-flag
        left: 0
        top: -5px

    &-date-flag-text
        left: 20px

.n--a img
    min-width: 100%
    max-height: 100%
    width: auto
    height: auto

