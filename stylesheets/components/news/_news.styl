/* 

    NEWS

    Base:
        n--a
    
    Modifier: 
        sm = small

*/ 

.n--a
    position: relative 
    background-color: $white
    text-decoration: none
    font-family: $serif 
    height: 450px

    @media $media-large
        display: block
        height: 190px
        
    &-news-item-wrapper
        padding: 0
        position: relative
        background-color: $white
        height: 100%

        &:hover, &:focus, &:focus-visible
            background-color: $optimistic-blue-dark
            color: $white

            .n--a-department-title, .n--a-title
                color: $white

    &-thumb-wrapper
        margin-top: 0
        width: 100%
        height: 190px
        background-image: url(https://www.boston.gov/modules/custom/bos_content/modules/node_post/default_news.svg)
        background-repeat: no-repeat
        background-position: left center
        background-size: cover
    
    &-text-wrapper
        padding: 20px 10px 20px 0

        @media $media-large-max
            padding: 20px

    &-department-title
        text-transform: uppercase
        color: $body-text
        font-family: $sans
        font-size: .88889rem
        line-height: 1.08333rem
        margin: 20px 0 40px

        @media $media-large-max
            margin: 20px 0 40px 

    &-title
        color: #1871bd
        font-weight: 400
        font-style: italic
        text-transform: none
        margin: 5px 0px 5px
        font-size: 1.2222rem
        letter-spacing: .4px
        line-height: 1.5552rem
        font-family: "Lora", serif

    &-date-flag
        left: 0
        top: -5px

    &-date-flag-text
        left: 20px

.n--a img
    min-width: 100%
    max-height: 100%
    width: auto
    height: auto

// handle hover interference with focus
.n--a.focus-active:hover,
.n--a.focus-active:hover .n--a-news-item-wrapper
    pointer-events: none
    background-color: $white

    .n--a-department-title
        color: $body-text

    .n--a-title
        color: $optimistic-blue-dark

.n--a.focus-active:focus .n--a-news-item-wrapper
    pointer-events: auto
    background-color: $optimistic-blue-dark
    color: $white

    .n--a-department-title, .n--a-title
        color: $white

.news-item-news:last-child
    margin-bottom: 50px

