/*

   Normal List Items

   Base:
    pg

   Elements:
    li

   Modifier:
    None Yet

 */

.pg
  display: flex
  font-size: responsive 14px 16px
  font-range: 480px 1440px
  justify-content: center
  line-height: 1
  list-style: none
  padding: 0
  padding-top: $sizing-400
  margin: 0

  &-li
    list-style: none
    padding: 0
    margin: 0

    &:first-of-type,
    &:last-of-type
      .pg-li-i--link
        @media $media-medium-max
          display: none;
        
        background-color: $optimistic-blue-dark
        color: $white

    &:last-child
      border-right: 2px solid $charles-blue

    &-i
      border-top: 2px solid $charles-blue
      border-bottom: 2px solid $charles-blue
      border-left: 2px solid $charles-blue
      //color: $charles-blue
      display: block
      padding: $sizing-300 15px
      text-transform: uppercase
      opacity: 0.5
      white-space: nowrap
      font-family: Montserrat,sans-serif
      letter-spacing: 1px

      @media $media-medium
        padding: $sizing-300

      &--link

        &:link
          background-color: $white
          color: $charles-blue
          opacity: 1
          text-decoration: none

        &:hover, &:focus
          background-color: $freedom-red-light
          color: $white

        &:visited
          color: $charles-blue

      &--a

        &:link
          background-color: $optimistic-blue-dark
          color: $white

        &:hover, &:focus
          color: $white

        &:visited
          color: $white

      &-h
        display: none

        @media $media-medium
          display: inline

