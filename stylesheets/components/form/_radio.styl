/*

   Radios

   Base:
    ra

   Elements:
    l = label
    f = field

   Modifier:
    None Yet

 */

.ra
  display: flex
  align-items: center

  &:not(:last-child)
    margin-bottom: $sizing-200

  &-f
    height: 30px
    margin: 0
    padding: 0
    width: 30px

    @media $media-medium
      height: 35px
      width: 35px

    &:before
      content: ""
      display: block
      height: 30px
      width: 30px
      background-color: #ffffff
      border: 3px solid $charles-blue
      box-sizing: border-box
      border-radius: 100%
      position: absolute

      @media $media-medium
        height: 35px
        width: 35px

    &:checked
      &:before
        background: $optimistic-blue
        box-shadow: inset 0 0 0 7px $white

    &:focus
      outline: none

      &:before
        box-shadow: inset 0 0 0 7px $white, 0 0 0 3px $optimistic-blue

    &[type=radio]
      display: block
      // hides the button on iOS
      background: none
      border: none
      -webkit-appearance: none
      -moz-appearance: none

  &-l
    color: $charles-blue
    font-family: $serif
    font-size: responsive 16px 20px
    font-range: 480px 1440px
    margin-left: 7px
    width: calc(100% - 42px)

    @media $media-medium
      margin-left: 15px

    @media $media-large
      // Helps to make sure we're centered at larger font sizes
      margin-top: -.1em
