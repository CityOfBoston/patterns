/*

   SEARCH (Full Screen)

   Base:
    sf

 */

.sf
  padding: 0
  display: block

  &-l
    color: $charles-blue
    font-family: $sans
    font-size: responsive 30px 75px
    font-range: 480px 1440px
    font-weight: 700
    letter-spacing: -1px
    line-height: 1
    margin: 0
    padding: 0
    text-transform: uppercase

  &--md &-l
    font-size: responsive 20px 30px
    font-range: 480px 1440px

  &-i
    position: relative

    // For drupal
    .form-item
      margin: 0

    &-f
      background-color: transparent
      border: none
      border-bottom: $border-400 solid $charles-blue
      border-radius: 0
      color: $freedom-red-dark
      font-family: $serif
      font-size: responsive 30px 75px
      font-style: italic
      font-range: 480px 1440px
      height: auto
      letter-spacing: -1px
      line-height: 1.3
      margin: 0
      padding: 0 40px 0 0
      width: 100%

      &:focus
        outline: none

      &::placeholder
        color: $freedom-red-light
        opacity: .5

    &-l
      color: $charles-blue
      font-family: $sans
      font-size: responsive 14px 18px
      font-range: 240px 640px
      font-weight: 500
      letter-spacing: -.4px
      line-height: 2
      margin: 0
      padding: 0
      text-transform: uppercase

    &-b
      background: $icon_search no-repeat center
      background-size: contain
      background-color: transparent !important
      border: none
      cursor: pointer
      height: 25px
      width: 25px
      margin-top: -3px // Boston.gov override
      padding: 0
      position: absolute
      right: 0
      text-indent: -999em
      top: 50%
      transform: translateY(-50%)

      @media $media-medium
        height: 35px
        width: 35px

      @media $media-xlarge
        height: 55px
        width: 55px
        margin-top: 0

      &:hover, &:focus
        background-color: transparent

  &--sm &-i-f
    font-size: 16px
    letter-spacing: 0
    border-bottom-width: $border-150

  &--sm &-i-b
    height: 18px
    width: 18px
    margin-top: -2px

  &--md &-i-f
    font-size: responsive 18px 28px
    font-range: 480px 1440px
    border-bottom-width: $border-150

    @media $media-medium
      border-bottom-width: $border-200

  &--md &-i-b
    height: 20px
    width: 20px
    margin-top: -2px

    @media $media-medium
      height: 26px
      width: 26px
      margin-top: -4px

  &--y &-i-f
    color: $charles-blue

  &--y &-i-b
    background-image: $icon_search_yellow


.b--b
  .sf
    &-i
      &-f
        border-color: $white

        &::placeholder
          color: $grey-600
