/*

   Checkboxes

   Base:
    btn

   Modifier:
    c = charles blue
    sb = small block (becomes block on small screens)

 */

.btn
  background-color: $optimistic-blue
  color: $white
  font-family: $sans
  font-size: responsive 14px 16px
  font-range: 480px 1440px
  font-weight: 700
  letter-spacing: 1px
  line-height: 1rem
  margin: 0
  padding: $sizing-400
  text-transform: uppercase
  text-decoration: none
  border: none
  cursor: pointer
  display: inline-block

  // compensates for the uppercase letters not being vertically-centered
  &::after
    content: ''
    margin-top: -1px
    display: block

  &:link
  &:visited
    color: white

  &:hover
    background-color: $freedom-red
    color: white

  &:disabled
    cursor: default
    background-color: $grey-100

    &:hover
      background-color: $grey-100
      color: white

  &--ib
    display: inline-block

  &--b
    display: block
    text-align: center
    width: 100%

  // Button that fills the remaining space in a flex row
  &--row
    flex: 1
    align-self: stretch
    // flex behavior should give us the space we need. Set a low
    // minimum because fitting in with the UI is a higher priority
    // than the above sizing-400
    padding: $sizing-100

  &--c
    background-color: $charles-blue

    &:hover
      background-color: $freedom-red

  &--y
    background-color: $yellow

    &:hover
      background-color: $yellow-hover
      color: white

  &--w
    background-color: $white
    color: $optimistic-blue

    &:hover
      background-color: $optimistic-blue
      color: $white

  &--r-hov
    &:hover
      background-color: $freedom-red
      color: $white

  &--w-hov
    &:hover
      background-color: $white
      color: $freedom-red

  &--sb
    margin-top: 0.5rem

    @media $media-xlarge
      margin-top: 0

  &--sm
    font-weight: normal
    // t--s100
    font-size: responsive $font-100 $font-200
    font-range: 480px 1440px

  &--100
    padding: $sizing-200 $sizing-300

  &--200
    padding: $sizing-300

    &--m
      @media $media-medium
        padding: $sizing-300

  &--300
    padding: $sizing-400

    &--l
      @media $media-large
        padding: $sizing-400

  &--700
    padding: $sizing-400 $sizing-900
