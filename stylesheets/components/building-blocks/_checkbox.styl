/*

   Checkboxes

   Base:
    cb

   Elements:
    l = label
    f = field

   Modifier:
    None Yet

 */

.cb
  align-items: center
  display: flex
  margin: 0
  position: relative

  &:not(:last-child)
    margin: 0 0 $sizing-200

  &-f
    height: 35px
    margin: 0
    padding: 0
    width: 35px
    align-self: flex-start

    @media $media-medium
      height: 42px
      width: 42px

    &:before
      content: ""
      display: block
      height: 35px
      width: 35px
      background-color: #ffffff
      border: 3px solid $charles-blue
      box-sizing: border-box
      position: absolute
      top: 0
      left: 0

      @media $media-medium
        height: 42px
        width: 42px

    &:checked
      &:before
        background: #ffffff $check no-repeat center

    &:focus
      &:before
        box-shadow: 0 0 0 3px $focus-indicator-color

    &[type=checkbox]
      display: block
      // hides the button on iOS
      background: none
      -moz-appearance: none
      -webkit-appearance: none

    &--err:before
      border-color: $error-border-color

    // This is a separate block because it needs to be :checked:before, not
    // :before:checked
    &--err:checked
      &:before
        background: #ffffff $check_red no-repeat center

  &-l
    color: $charles-blue
    font-family: $serif
    font-size: responsive 16px 20px
    font-range: 480px 1440px
    line-height: $line-height-150
    margin-left: 7px
    width: calc(100% - 42px)
    text-transform: none

    @media $media-medium
      margin-left: 1rem

    &--sans
      font-family: $sans
      font-weight: 700
      font-size: responsive 12px 14px
      text-transform: uppercase
