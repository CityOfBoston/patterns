/*

   BORDER WIDTHS

   Base:
     bw = border-width

   Modifiers:
     0 = 0 width border
     1 = 1st step in border-width scale
     2 = 2nd step in border-width scale
     3 = 3rd step in border-width scale
     4 = 4th step in border-width scale
     5 = 5th step in border-width scale

*/

.bw0
  border-width: 0

.bw1
  border-width: .125rem

.bw2
  border-width: .25rem

.bw3
  border-width: .5rem

.bw4
  border-width: 1rem

.bw5
  border-width: 2rem

/*
  Resets borders
*/

.bt-0
  border-top-width: 0

.br-0
  border-right-width: 0

.bb-0
  border-bottom-width: 0

.bl-0
  border-left-width: 0
